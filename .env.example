# Database configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/foodify
DATABASE_USERNAME=foodify
DATABASE_PASSWORD=foodify

# Messaging infrastructure
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Third-party integrations
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase service account credentials (choose one of the following)
# 1) Base64-encoded JSON payload copied from the service account file
FIREBASE_CREDENTIALS_BASE64=
# 2) Path to the service account JSON file (e.g. file:/etc/foodify/firebase.json)
FIREBASE_CREDENTIALS_PATH=
# 3) Raw JSON string (only used if both options above are empty)
GOOGLE_APPLICATION_CREDENTIALS_JSON=
